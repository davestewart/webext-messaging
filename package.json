{
  "name": "webext-message-router",
  "version": "0.5.0",
  "description": "Type-safe message routing for browser extensions",
  "keywords": [
    "chrome-extension",
    "webextension",
    "messaging",
    "typescript",
    "wxt-module",
    "wxt"
  ],
  "author": "Dave Stewart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davestewart/webext-message-router.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "default": "./dist/vite/index.js"
    },
    "./wxt": {
      "types": "./dist/wxt/index.d.ts",
      "default": "./dist/wxt/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "glob": "^13.0.0",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^24.10.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.6",
    "wxt": "^0.20.11"
  },
  "peerDependencies": {
    "@types/chrome": "^0.0.268",
    "vite": "^7.2.6",
    "wxt": "^0.20.11"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "wxt": {
      "optional": true
    }
  }
}
